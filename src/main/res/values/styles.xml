<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme, dependent on API level. This theme is replaced by AppBaseTheme from res/values-vXX/styles.xml on newer devices. -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!-- Theme customizations available in newer API levels can go in res/values-vXX/styles.xml, while customizations related to backward-compatibility can go here. -->
    </style>

    <!-- Application theme. -->
    <!--<style name="AppTheme" parent="AppBaseTheme">-->
    <!--&lt;!&ndash; All customizations that are NOT specific to a particular API-level can go here. &ndash;&gt;-->
    <!--</style>-->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyTextViewStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:maxHeight">35dp</item>
        <item name="android:minHeight">35dp</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="SingleLineEditText">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="MultiLineEditText">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Spinner">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/spinner_bg</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="EzHeader">
        <item name="android:background">@color/ezHeaderBg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/ezHeaderTextColor</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:paddingTop">@dimen/screen_top_padding</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EzButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EzButtonSmaller" parent="EzButton">
        <item name="android:textSize">16sp</item>
        <item name="android:height">36dp</item>
        <item name="android:minHeight">36dp</item>
    </style>

    <style name="EzButtonSmall" parent="EzButton">
        <item name="android:textSize">17sp</item>
        <item name="android:height">38dp</item>
        <item name="android:minHeight">38dp</item>
    </style>

    <style name="EzButtonNormal" parent="EzButton">
        <item name="android:textSize">18sp</item>
        <item name="android:height">40dp</item>
        <item name="android:minHeight">40dp</item>
    </style>

    <style name="EzButtonLarge" parent="EzButton">
        <item name="android:textSize">18sp</item>
        <item name="android:height">42dp</item>
        <item name="android:minHeight">42dp</item>
    </style>

    <style name="EzButtonLarger" parent="EzButton">
        <item name="android:textSize">19sp</item>
        <item name="android:height">44dp</item>
        <item name="android:minHeight">44dp</item>
    </style>

    <style name="EzHorizontalBarButtonSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:height">40dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textColor">@color/cyan</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EzHorizontalBarButton" parent="EzHorizontalBarButtonSmall">
        <item name="android:textSize">16sp</item>
        <item name="android:height">46dp</item>
        <item name="android:minHeight">46dp</item>
    </style>

    <style name="TextKVKey">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textLighter</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextKVKeyStd" parent="TextKVKey">
        <item name="android:textColor">@color/textNormal</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="TextKVValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textDark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextKVValueStd" parent="TextKVValue">
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="PrescriptionHeaderCell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">1dp</item>
        <item name="android:paddingRight">1dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="PrescriptionHeaderText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:gravity">top|center_horizontal</item>
        <item name="android:textColor">@color/textDark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">1dp</item>
        <item name="android:paddingRight">1dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="PrescriptionHeaderTextEdit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:textColor">@color/textDarker</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="PrescriptionData">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">1dp</item>
        <item name="android:paddingRight">1dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textColor">@color/textDark</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>