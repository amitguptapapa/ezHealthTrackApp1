<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txt_insurance"
                style="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="Insurance"
                android:textColor="#6692F2"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ll_add_insurance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_insurance"
                android:orientation="horizontal"
                android:padding="10dp" >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp" >

                    <TextView
                        android:id="@+id/txt_name"
                        style="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:gravity="center"
                        android:text="Name of Provider"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/edit_name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/txt_name"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edit_text_bg"
                        android:padding="10dp"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp" >

                    <TextView
                        android:id="@+id/txt_desc"
                        style="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:gravity="center"
                        android:text="Description"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/edit_desc"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/txt_desc"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edit_text_bg"
                        android:padding="10dp"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp" >

                    <TextView
                        android:id="@+id/txt_date_issuedi"
                        style="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:gravity="center"
                        android:text="Date Issued"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/edit_date_issuedi"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/txt_date_issuedi"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edit_text_bg"
                        android:editable="false"
                        android:focusable="false"
                        android:padding="10dp"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp" >

                    <TextView
                        android:id="@+id/txt_date_expiryi"
                        style="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:gravity="center"
                        android:text="Date Expiry"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/edit_date_expiryi"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/txt_date_expiryi"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edit_text_bg"
                        android:editable="false"
                        android:focusable="false"
                        android:padding="10dp"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp" >

                    <TextView
                        android:id="@+id/txt_premium"
                        style="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:gravity="center"
                        android:text="Premium"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/edit_premium"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/txt_premium"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edit_text_bg"
                        android:padding="10dp"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp" >

                    <TextView
                        android:id="@+id/txt_upload"
                        style="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:text="Upload"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/btn_upload"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_upload"
                        android:layout_marginTop="10dp"
                        android:text="Choose File"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/btn_add_insurance"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="40dp"
                    android:layout_weight=".2"
                    android:background="@drawable/btn_blue"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="+"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_insurance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_add_insurance"
                android:orientation="vertical" >
            </LinearLayout>

            <TextView
                android:id="@+id/txt_consultation"
                style="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_insurance"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="Consultation Charges"
                android:textColor="#6692F2"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ll_add_consultation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_consultation"
                android:orientation="horizontal"
                android:padding="10dp" >

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp" >

                    <EditText
                        android:id="@+id/edit_initial_visit"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_below="@+id/txt_initial_visit"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edit_text_bg"
                        android:padding="10dp"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txt_initial_visit"
                        style="bold"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignRight="@+id/edit_initial_visit"
                        android:layout_margin="4dp"
                        android:gravity="center"
                        android:text="Initial Visit"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp" >

                    <TextView
                        android:id="@+id/txt_repeat_visit"
                        style="bold"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:gravity="center"
                        android:text="Repeat Visit"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/edit_repeat_visit"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_below="@+id/txt_repeat_visit"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edit_text_bg"
                        android:padding="10dp"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/btn_add_consultation"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="50dp"
                    android:layout_weight=".5"
                    android:background="@drawable/btn_blue"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="ADD"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

<!--                 <CheckBox -->
<!--                     android:id="@+id/cb_copy_address" -->
<!--                     android:layout_width="wrap_content" -->
<!--                     android:layout_height="wrap_content" -->
<!--                     android:layout_marginLeft="120dp" -->
<!--                     android:layout_marginTop="20dp" -->
<!--                     android:text="Use branch address for patient" -->
<!--                     android:textColor="#000000" -->
<!--                     android:textSize="16sp" -->
<!--                     android:textStyle="bold" /> -->
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_consultation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_add_consultation"
                android:orientation="vertical" >
            </LinearLayout>

            <TextView
                android:id="@+id/txt_languages"
                style="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_consultation"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="Languages Known"
                android:textColor="#6692F2"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ll_add_languages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_languages"
                android:orientation="horizontal"
                android:padding="20dp" >

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp" >

                    <EditText
                        android:id="@+id/edit_language"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_below="@+id/txt_language"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edit_text_bg"
                        android:padding="10dp"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txt_language"
                        style="bold"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignRight="@+id/edit_language"
                        android:layout_margin="4dp"
                        android:gravity="center"
                        android:text="Language"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp" >

                    <TextView
                        android:id="@+id/txt_added_list"
                        style="bold"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:gravity="center"
                        android:text="Added List"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <Spinner
                        android:id="@+id/spinner_added_list"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_below="@+id/txt_added_list"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/spinner_bg"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/btn_add_languages"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="62dp"
                    android:layout_weight=".5"
                    android:background="@drawable/btn_blue"
                    android:gravity="center"
                    android:text="ADD"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />
            </LinearLayout>

            <Button
                android:id="@+id/button_insurance"
                android:layout_width="110dp"
                android:layout_height="45dp"
                android:layout_below="@+id/ll_add_languages"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_blue"
                android:text="Submit"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>