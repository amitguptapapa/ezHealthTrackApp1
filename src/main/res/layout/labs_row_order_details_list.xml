<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="7dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_test_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/txt_enter_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Enter Value"
                android:textColor="#9AB8D8"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Report"
                android:textColor="#9AB8D8"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_error_reported"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Error Reported"
                android:textColor="#9AB8D8"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_slash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="/"
                android:textColor="#000000"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_report_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Report Error"
                android:textColor="#9AB8D8"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_print"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/print"
                android:padding="5dp"
                android:textColor="#9AB8D8"
                android:textSize="16sp"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_date_display"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_technician_display"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_action_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/img_action"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/action"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>