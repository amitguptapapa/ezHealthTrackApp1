<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:paddingBottom="@dimen/inner_padding"
    android:paddingLeft="@dimen/screen_left_padding"
    android:paddingRight="@dimen/screen_right_padding"
    android:paddingTop="@dimen/inner_padding" >

    <TextView
        android:id="@+id/txt_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="6dp"
        android:paddingTop="2dp"
        android:text="1."
        android:textColor="@color/textLight"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txt_index"
        android:text="description"
        android:textColor="@color/textDarker"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/rl_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/txt_details"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:visibility="gone" >

        <Button
            android:id="@+id/btn_view"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:background="@drawable/btn_blue"
            android:drawableStart="@drawable/view_details"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="View"
            android:textColor="#ffffff"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn_sendmessage"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:layout_toEndOf="@+id/btn_view"
            android:background="@drawable/btn_blue"
            android:drawableStart="@drawable/send_message"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Send Message"
            android:textColor="#ffffff"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

</RelativeLayout>