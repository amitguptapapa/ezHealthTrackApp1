<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="18dp" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_blue_round"
        android:padding="20dp" >

        <TextView
            android:id="@+id/txt_header_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:text="No more Appointments can be Scheduled"
            android:textColor="#6692F2"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_header_schedule"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:padding="10dp"
            android:text="Below are the already scheduled appointments"
            android:textColor="#6692F2"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_apt_1"
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_header"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_disabled_bg"
            android:padding="10dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_apt_2"
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_apt_1"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_disabled_bg"
            android:padding="10dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_apt_3"
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_apt_2"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_disabled_bg"
            android:padding="10dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/txt_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/close"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>