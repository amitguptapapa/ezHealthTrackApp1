<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <TextView
        android:id="@+id/txt_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/rl_main_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_group_name"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/txt_main_test_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edit_observed_value"
            style="@style/SingleLineEditText"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="280dp"
            android:hint="Observed Value"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinner_observed_value"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_below="@+id/edit_observed_value"
            android:layout_marginLeft="280dp"
            android:background="@drawable/spinner_bg" />

        <TextView
            android:id="@+id/txt_unit_display"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_toRightOf="@+id/edit_observed_value"
            android:text=""
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_reference_range_display"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="78dp"
            android:layout_toRightOf="@+id/txt_unit_display"
            android:text=""
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_notes_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="82dp"
            android:layout_toRightOf="@+id/txt_reference_range_display"
            android:text=""
            android:textColor="#000000"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_result_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_main_display"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:text="Add Result Notes"
        android:textColor="#9AB8D8"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edit_notes"
        style="@style/SingleLineEditText"
        android:layout_width="1100dp"
        android:layout_height="40dp"
        android:layout_below="@+id/rl_main_display"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:gravity="start"
        android:hint="Result Notes"
        android:visibility="gone" />
    

</RelativeLayout>
