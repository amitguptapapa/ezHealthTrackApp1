<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <TextView
        android:id="@+id/txt_subjective"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_details"
        android:layout_marginTop="15dp"
        android:background="@color/HeaderBg"
        android:padding="10dp"
        android:text="@string/subjective"
        android:textColor="@color/TextBlue"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll_subjective"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_subjective"
        android:orientation="vertical"
        android:paddingLeft="20dp" >

        <LinearLayout
            android:id="@+id/ll_subjective_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:visibility="visible" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="start"
                    android:text="@string/chief_complaint"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/edit_cheif_complaint"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/txt"
                    android:background="@drawable/edit_text_disabled_bg"
                    android:gravity="center_vertical"
                    android:inputType="textMultiLine"
                    android:padding="0dp"
                    android:tag="cc"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txt_hp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@color/HeaderBg"
                    android:padding="10dp"
                    android:text="@string/HP"
                    android:textColor="@color/TextBlue"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/ll_hp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_hp"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:visibility="visible" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp" >

                        <TextView
                            android:id="@+id/txt1"
                            android:layout_width="200dp"
                            android:layout_height="30dp"
                            android:gravity="start"
                            android:text="@string/Historyofpresentillness"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_toRightOf="@+id/txt1"
                            android:background="@drawable/edit_text_disabled_bg"
                            android:gravity="center_vertical"
                            android:inputType="textMultiLine"
                            android:padding="0dp"
                            android:tag="hpi"
                            android:textColor="#000000"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp" >

                        <TextView
                            android:id="@+id/txt2"
                            android:layout_width="200dp"
                            android:layout_height="30dp"
                            android:gravity="start"
                            android:text="@string/Pastmedicalhistory"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_toRightOf="@+id/txt2"
                            android:background="@drawable/edit_text_disabled_bg"
                            android:gravity="center_vertical"
                            android:inputType="textMultiLine"
                            android:padding="0dp"
                            android:tag="pmh"
                            android:textColor="#000000"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp" >

                        <TextView
                            android:id="@+id/txt3"
                            android:layout_width="200dp"
                            android:layout_height="30dp"
                            android:gravity="start"
                            android:text="@string/FamilyHistory"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_toRightOf="@+id/txt3"
                            android:background="@drawable/edit_text_disabled_bg"
                            android:gravity="center_vertical"
                            android:inputType="textMultiLine"
                            android:padding="0dp"
                            android:tag="fh"
                            android:textColor="#000000"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp" >

                        <TextView
                            android:id="@+id/txt4"
                            android:layout_width="200dp"
                            android:layout_height="30dp"
                            android:gravity="start"
                            android:text="@string/PersonalHistory"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_toRightOf="@+id/txt4"
                            android:background="@drawable/edit_text_disabled_bg"
                            android:gravity="center_vertical"
                            android:inputType="textMultiLine"
                            android:padding="0dp"
                            android:tag="ph"
                            android:textColor="#000000"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp" >

                        <TextView
                            android:id="@+id/txt5"
                            android:layout_width="200dp"
                            android:layout_height="30dp"
                            android:gravity="start"
                            android:text="@string/DrugHistory"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_toRightOf="@+id/txt5"
                            android:background="@drawable/edit_text_disabled_bg"
                            android:gravity="center_vertical"
                            android:inputType="textMultiLine"
                            android:padding="0dp"
                            android:tag="dha"
                            android:textColor="#000000"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp" >

                        <CheckBox
                            android:id="@+id/cb_smoke"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:tag="smok"
                            android:text="Smoking(Yes/No)"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_smoke"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:padding="2dp"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/txt_smoke"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="For how long Year-Months"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/edit_year"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:layout_below="@+id/txt_smoke"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/edit_text_disabled_bg"
                            android:hint="Year"
                            android:padding="5dp"
                            android:tag="sy"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/edit_Month"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:layout_below="@+id/txt_smoke"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/edit_year"
                            android:background="@drawable/edit_text_disabled_bg"
                            android:hint="Month"
                            android:padding="5dp"
                            android:tag="sm"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txt_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_smoke"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/edit_Month"
                            android:text="Year-Month"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txt_how"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/edit_year"
                            android:layout_marginTop="10dp"
                            android:text="How many in a Day"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/edit_day"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:layout_below="@+id/txt_how"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/edit_text_disabled_bg"
                            android:hint="In a day"
                            android:padding="5dp"
                            android:tag="sd"
                            android:textColor="#000000"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp" >

                        <CheckBox
                            android:id="@+id/cb_alcohol"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:tag="alco"
                            android:text="Alcohol(Yes/No)"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_alcohol"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:padding="2dp"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/txt_alcohol"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="For how long Year-Months"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/edit_year1"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:layout_below="@+id/txt_alcohol"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/edit_text_disabled_bg"
                            android:hint="Year"
                            android:padding="5dp"
                            android:tag="ay"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/edit_Month1"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:layout_below="@+id/txt_alcohol"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/edit_year1"
                            android:background="@drawable/edit_text_disabled_bg"
                            android:hint="Month"
                            android:padding="5dp"
                            android:tag="am"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txt_unit1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_alcohol"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/edit_Month1"
                            android:text="Year-Month"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txt_how1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/edit_year1"
                            android:layout_marginTop="10dp"
                            android:text="How much in a Day"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/edit_day1"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:layout_below="@+id/txt_how1"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/edit_text_disabled_bg"
                            android:hint="In a day"
                            android:padding="5dp"
                            android:tag="ad"
                            android:textColor="#000000"
                            android:textSize="16dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp" >

                        <TextView
                            android:id="@+id/txt6"
                            android:layout_width="200dp"
                            android:layout_height="30dp"
                            android:gravity="start"
                            android:text="@string/Note"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_toRightOf="@+id/txt6"
                            android:background="@drawable/edit_text_disabled_bg"
                            android:gravity="center_vertical"
                            android:inputType="textMultiLine"
                            android:padding="0dp"
                            android:tag="note"
                            android:textColor="#000000"
                            android:textSize="16sp" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/txt_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:src="@drawable/close"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>