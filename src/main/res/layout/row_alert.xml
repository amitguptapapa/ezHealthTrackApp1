<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp" >

    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_blue_round"
        android:padding="5dp" >

        <TextView
            android:id="@+id/txt_header_hospital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="3dp"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/rl_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txt_header_hospital"
            android:layout_marginTop="20dp"
            android:visibility="gone" >
            
             <TextView
                android:id="@+id/txt_subj_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="3dp"
                android:text="Subject :"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_subject"
                android:layout_toRightOf="@id/txt_subj_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="Abhishek Goyal has an appointment @9:00 am on Thu, Jan 30, 2014 for &quot;High Fever&quot; "
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_details"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_blue"
                android:layout_alignParentRight="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="View Details"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>