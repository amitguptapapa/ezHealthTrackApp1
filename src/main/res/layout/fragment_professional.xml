<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:gravity="top"
    > 
    
     <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         >
         
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content" >
    
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_margin="4dp"
        android:gravity="center"
        android:text="Speciality"
        android:textSize="15sp"
        android:textColor="#000000" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/text2"
        android:background="@drawable/spinner_bg"
        android:spinnerMode="dropdown" 
        android:textColor="#000000"
        android:textSize="15sp" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/text2"
        android:layout_toRightOf="@+id/spinner1"
        android:background="@drawable/spinner_bg"
        android:spinnerMode="dropdown" 
        android:textColor="#000000"
        android:textSize="15sp" />
    
    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner1"
        android:layout_marginTop="15dp"
        android:text="Expertise 1"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/edit_expertise"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/edit_text_bg"
        android:textSize="15dp"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/text3"
        android:singleLine="true"
        android:hint="Expertise"
         
        />
    
    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_expertise"
        android:layout_marginTop="25dp"
        android:text="Expertise 2"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/edit_expertise1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text4"
         android:background="@drawable/edit_text_bg"
         android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:padding="10dp"
        android:singleLine="true"
        android:hint="Expertise" />
    
    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_expertise1"
        android:layout_marginTop="25dp"
        android:text="Experience"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/edit_experience"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text5"
         android:background="@drawable/edit_text_bg"
         android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:padding="10dp"
        android:singleLine="true"
        android:hint="Experience"  />
    
    <TextView
        android:id="@+id/text6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_experience"
        android:layout_marginTop="25dp"
        android:text="Experience Description"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/edit_expdec"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
         android:background="@drawable/edit_text_bg"
         android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:padding="10dp"
        android:layout_below="@+id/text6"
        android:hint="Description"
        android:inputType="textMultiLine"
         >
        <requestFocus />
    </EditText>
    
    <TextView
        android:id="@+id/text7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_expdec"
        android:layout_marginTop="15dp"
        android:text="Awards"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/edit_awards"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
         android:background="@drawable/edit_text_bg"
         android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:padding="10dp"
        android:layout_below="@+id/text7"
        android:hint="Awards" />
    
    <Button
        android:id="@+id/button_prof"
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:layout_below="@+id/edit_awards"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_blue"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />
    
    </RelativeLayout>
</ScrollView>
    
    
</RelativeLayout>
