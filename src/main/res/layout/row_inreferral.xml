<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_blue_round"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/img_patient"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/noimage" />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_patient"
            android:padding="3dp"
            android:text="Tarun Goyal, 19"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_name"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_patient"
            android:padding="3dp"
            android:text="Gender : "
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_gender_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_name"
            android:layout_toRightOf="@+id/txt_gender"
            android:padding="3dp"
            android:text="Male"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_referredby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_gender"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_patient"
            android:padding="3dp"
            android:text="Referred by : "
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_referredby_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_gender"
            android:layout_toRightOf="@+id/txt_referredby"
            android:padding="3dp"
            android:text="Male"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_referredby"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_patient"
            android:padding="3dp"
            android:text="Date : "
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_date_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_referredby"
            android:layout_toRightOf="@+id/txt_date"
            android:padding="3dp"
            android:text=""
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_date"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_patient"
            android:padding="3dp"
            android:text="Reason : "
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_reason_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_date"
            android:layout_toRightOf="@+id/txt_reason"
            android:padding="3dp"
            android:text=""
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/img_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_reason_1"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_patient"
            android:padding="3dp"
            android:src="@drawable/email" />

        <TextView
            android:id="@+id/txt_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_reason_1"
            android:layout_toRightOf="@+id/img_email"
            android:padding="3dp"
            android:text="starabhi23@gmail.com"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/img_phn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_email"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_patient"
            android:padding="3dp"
            android:src="@drawable/phn" />

        <TextView
            android:id="@+id/txt_phn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_email"
            android:layout_toRightOf="@+id/img_phn"
            android:padding="3dp"
            android:text="8447588904"
            android:textSize="16sp" />

        <View
            android:id="@+id/view_center"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerInParent="true" />

        <Button
            android:id="@+id/btn_schedule"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:background="@drawable/btn_blue"
            android:text="Schedule"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>