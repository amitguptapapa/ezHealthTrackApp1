<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <EditText
        android:id="@+id/edit_add_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/cb_add_order"
        android:background="@drawable/edit_text_bg"
        android:padding="10dp"
        android:tag="othe"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/cb_add_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:padding="10dp"
        android:text="Note"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cb_add_order"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:text="Special Note"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <EditText
        android:id="@+id/edit_note"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/txt_note"
        android:layout_margin="10dp"
        android:background="#ffffff"
        android:gravity="start"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:visibility="gone" />

    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/edit_note"
        android:layout_marginTop="20dp"
        android:background="#000000"
        android:padding=".5dp" >
    </TableLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/table"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp" >

        <Button
            android:id="@+id/btn_upload"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:background="@drawable/btn_blue"
            android:text="Upload Option"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:layout_toRightOf="@+id/btn_upload"
            android:background="@drawable/btn_blue"
            android:text="Save"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

</RelativeLayout>