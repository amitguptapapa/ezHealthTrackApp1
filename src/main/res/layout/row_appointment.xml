<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_blue_round" >

        <TextView
            android:id="@+id/txt_confirmed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/rl_actions_confirmed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txt_confirmed"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:visibility="gone" >

            <Button
                android:id="@+id/btn_reschedule"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="@drawable/btn_blue"
                android:drawableLeft="@drawable/re_schedule"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text=" Re-Schedule"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_sendmessage"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/btn_reschedule"
                android:background="@drawable/btn_blue"
                android:drawableLeft="@drawable/send_message"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Send Message"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_order"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/btn_sendmessage"
                android:background="@drawable/btn_blue"
                android:drawableLeft="@drawable/order"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text=" Order"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_checkin"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/btn_order"
                android:background="@drawable/btn_blue"
                android:drawableLeft="@drawable/checkin"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text=" Check-In"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_followup"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/btn_checkin"
                android:background="@drawable/btn_blue"
                android:drawableLeft="@drawable/followup"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text=" Followup"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_reject"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/btn_followup"
                android:background="@drawable/btn_blue"
                android:drawableLeft="@drawable/reject"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Reject"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_actions_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txt_confirmed"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:visibility="gone" >

            <Button
                android:id="@+id/btn_noshow"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="@drawable/btn_blue"
                android:enabled="false"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="No Show"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_new"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/btn_noshow"
                android:background="@drawable/btn_blue"
                android:drawableLeft="@drawable/new_img"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="New"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_sendmessage_hist"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/btn_new"
                android:background="@drawable/btn_blue"
                android:drawableLeft="@drawable/send_message"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Send Message"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_orders"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/btn_sendmessage_hist"
                android:background="@drawable/btn_blue"
                android:drawableLeft="@drawable/view_details"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text=" Order"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_followups"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/btn_orders"
                android:background="@drawable/btn_blue"
                android:drawableLeft="@drawable/followup"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text=" Followup"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </RelativeLayout>
        
           <RelativeLayout
            android:id="@+id/rl_actions_newtentative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txt_confirmed"
            android:layout_marginTop="20dp"
            android:visibility="gone" >

            <Button
                android:id="@+id/btn_accept"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_blue"
                android:drawableLeft="@drawable/confirm"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Accept"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_reschedule_new"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_toRightOf="@+id/btn_accept"
                android:background="@drawable/btn_blue"
                android:drawableLeft="@drawable/re_schedule"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Re-Schedule"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_sendmessage_new"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_toRightOf="@+id/btn_reschedule_new"
                android:background="@drawable/btn_blue"
                android:drawableLeft="@drawable/send_message"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Send Message"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_reject_new"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_toRightOf="@+id/btn_sendmessage_new"
                android:background="@drawable/btn_blue"
                android:drawableLeft="@drawable/reject"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Reject"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>