<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context=".OrderCreateActivity" >

    <TextView
        android:id="@+id/txt_bill_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="@string/BillPayment"
        android:textColor="#9AB8D8"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/rl_patient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_bill_payment"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_blue_round"
        android:padding="5dp" >

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/Patient"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_name_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/txt_name"
            android:text=""
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/OrderDate"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_order_date_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/txt_order_date"
            android:text=""
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/txt_order_date"
            android:text="@string/Order"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_order_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/txt_order"
            android:text=""
            android:textColor="#82CAFA"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/OrderStatus"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_order_status_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/txt_order_status"
            android:text=""
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_bill_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_order_date"
            android:layout_marginLeft="464dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/txt_order_status"
            android:text="@string/BillStatus"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_bill_status_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_order_date"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/txt_bill_status"
            android:text=""
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_bill_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_order"
            android:layout_marginLeft="302dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/txt_bill_status"
            android:text="@string/BillId"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_bill_id_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_order"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/txt_bill_id"
            android:text=""
            android:textColor="#82CAFA"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_due"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_patient"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/txt_amount_due"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/AmountDue"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_rupee"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/txt_amount_due"
            android:src="@drawable/rupee" />

        <TextView
            android:id="@+id/txt_amount_due_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_rupee"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_original_amount_due"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_toRightOf="@+id/txt_amount_due"
            android:text="@string/OriginalAmountDue"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_rupee_1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/txt_original_amount_due"
            android:src="@drawable/rupee" />

        <TextView
            android:id="@+id/txt_original_amount_due_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_rupee_1"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_payment_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_toRightOf="@+id/txt_original_amount_due"
            android:text="@string/PaymentHistory"
            android:textColor="#82CAFA"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_due"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="40dp" >

        <RelativeLayout
            android:id="@+id/rl_actual_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txt_total_amount"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="@string/TotalAmount"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_discount"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/txt_total_amount"
                android:layout_marginTop="10dp"
                android:text="@string/Discount"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_tax"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/txt_discount"
                android:layout_marginTop="10dp"
                android:text="@string/Tax"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_payable_amount"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/txt_tax"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_paying_amount"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/txt_payable_amount"
                android:layout_marginTop="10dp"
                android:text="@string/PayingAmount"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_balance_amount"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/txt_paying_amount"
                android:layout_marginTop="10dp"
                android:text="@string/BalanceAmount"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_payment_method"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/txt_balance_amount"
                android:layout_marginTop="10dp"
                android:text="@string/PaymentMethod"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_notes"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/txt_payment_method"
                android:layout_marginTop="10dp"
                android:text="@string/Notes"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_actual_amount_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_toRightOf="@+id/rl_actual_amount" >

            <ImageView
                android:id="@+id/img_rupee_2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/rupee" />

            <TextView
                android:id="@+id/txt_total_amount_display"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/img_rupee_2"
                android:background="@drawable/edit_text_disabled_bg"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:textColor="#000000"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spinner_discount"
                android:layout_width="98dp"
                android:layout_height="40dp"
                android:layout_below="@+id/txt_total_amount_display"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/spinner_bg" />

            <TextView
                android:id="@+id/txt_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_total_amount_display"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/spinner_discount"
                android:text="@string/percent"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_discount"
                style="@style/SingleLineEditText"
                android:layout_width="77dp"
                android:layout_height="40dp"
                android:layout_below="@+id/txt_total_amount_display"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/txt_percent"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/img_rupee_3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@+id/txt_total_amount_display"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/edit_discount"
                android:src="@drawable/rupee" />

            <EditText
                android:id="@+id/txt_discount_display"
                style="@style/SingleLineEditText"
                android:layout_width="77dp"
                android:layout_height="40dp"
                android:layout_below="@+id/txt_total_amount_display"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/img_rupee_3"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_percent_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_percent"
                android:layout_marginTop="30dp"
                android:text="@string/percent"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_tax_display"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_below="@+id/edit_discount"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/txt_percent_1"
                android:background="@drawable/edit_text_disabled_bg"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/img_rupee_5"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@+id/txt_percent_1"
                android:layout_marginTop="35dp"
                android:src="@drawable/rupee" />

            <TextView
                android:id="@+id/txt_payable_amount_display"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_below="@+id/txt_tax_display"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/img_rupee_5"
                android:background="@drawable/edit_text_disabled_bg"
                android:gravity="center_vertical"
                android:padding="5sp"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/img_rupee_6"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@+id/img_rupee_5"
                android:layout_marginTop="35dp"
                android:src="@drawable/rupee" />

            <EditText
                android:id="@+id/edit_paying_amount"
                style="@style/SingleLineEditText"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_below="@+id/txt_payable_amount_display"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/img_rupee_6"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/img_rupee_7"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@+id/img_rupee_6"
                android:layout_marginTop="35dp"
                android:src="@drawable/rupee" />

            <TextView
                android:id="@+id/txt_balance_amount_display"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_below="@+id/edit_paying_amount"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/img_rupee_7"
                android:background="@drawable/edit_text_disabled_bg"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:textColor="#000000"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spinner_payment_method"
                style="@style/Spinner"
                android:layout_width="315dp"
                android:layout_height="40dp"
                android:layout_below="@+id/txt_balance_amount_display"
                android:layout_marginTop="10dp" />

            <EditText
                android:id="@+id/edit_notes"
                style="@style/SingleLineEditText"
                android:layout_width="315dp"
                android:layout_height="70dp"
                android:layout_below="@+id/spinner_payment_method"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:hint="@string/Notes"
                android:textColor="#000000"
                android:textSize="16sp" />
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_below="@+id/rl_scroll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_grey"
        android:text="@string/Submit"
        android:textColor="#ffffff"
        android:textSize="16sp" />

</RelativeLayout>