<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_confirmed"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/txt_header_allergies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text="Medical Records - Allergies"
        android:textColor="#9AB8D8"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_header_allergies"
        android:orientation="horizontal"
        android:padding="2dp" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="6" >

            <AutoCompleteTextView
                android:id="@+id/edit_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="2dp"
                android:background="@drawable/edit_text_bg"
                android:hint="Patient Name | Patient ID"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/img_clear_filter"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_margin="8dp"
                android:background="@drawable/close_button"
                android:padding="10dp"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="6" 
            android:visibility="gone">

            <TextView
                android:id="@+id/txt_start_date"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="@drawable/edit_text_bg"
                android:gravity="center_vertical"
                android:hint="Select From Date (mm/dd/yyyy)"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/img_start_date_clear_filter"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_margin="8dp"
                android:background="@drawable/close_button"
                android:padding="10dp"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="6" 
             android:visibility="gone">

            <TextView
                android:id="@+id/txt_end_date"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="@drawable/edit_text_bg"
                android:gravity="center_vertical"
                android:hint="Select To Date (mm/dd/yyyy)"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/img_end_date_clear_filter"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_margin="8dp"
                android:background="@drawable/close_button"
                android:padding="10dp"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_margin="2dp"
            android:background="@drawable/btn_blue"
            android:gravity="center"
            android:padding="5dp"
            android:text="Search"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_count_confirmed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_filter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="16sp" />

    <ListView
        android:id="@+id/list_patients"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_add_allergies"
        android:layout_below="@+id/txt_count_confirmed" />

    <Button
        android:id="@+id/btn_add_allergies"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:background="@drawable/btn_grey"
        android:text="Add Allergy"
        android:textColor="#ffffff"
        android:textSize="16dp" />

</RelativeLayout>