<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/txt_form"
        style="@style/PrescriptionData"
        android:text="Formulation" />

    <TextView
        android:id="@+id/txt_drug_name"
        style="@style/PrescriptionData"
        android:text="Drug Name" />

    <TextView
        android:id="@+id/txt_strength"
        style="@style/PrescriptionData"
        android:text="Strength" />

    <TextView
        android:id="@+id/txt_unit"
        style="@style/PrescriptionData"
        android:text="Unit Type" />

    <TextView
        android:id="@+id/txt_route"
        style="@style/PrescriptionData"
        android:text="Route" />

    <TextView
        android:id="@+id/txt_frequency"
        style="@style/PrescriptionData"
        android:text="Frequency" />

    <TextView
        android:id="@+id/txt_time"
        style="@style/PrescriptionData"
        android:text="Times" />

    <TextView
        android:id="@+id/txt_quantity"
        style="@style/PrescriptionData"
        android:text="Quantity" />

    <TextView
        android:id="@+id/txt_refills"
        style="@style/PrescriptionData"
        android:text="Refills" />

    <TextView
        android:id="@+id/txt_refill_time"
        style="@style/PrescriptionData"
        android:text="Refills Time" />

    <TextView
        android:id="@+id/txt_notes"
        style="@style/PrescriptionData"
        android:text="Notes" />

    <TextView
        android:id="@+id/btn_del_medicine"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="6dp"
        android:background="@drawable/btn_blue"
        android:gravity="center"
        android:text="-"
        android:textColor="#ffffff"
        android:textSize="14sp" />

</LinearLayout>