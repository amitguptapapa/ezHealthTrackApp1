<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_hospital_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
     
    <TextView
        android:id="@+id/txt_header_hospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#9AB8D8"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="My Hospitals - Search" />
     
   <LinearLayout
        android:id="@+id/ll_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp"
        android:layout_below="@+id/txt_header_hospital" >
         <EditText
            android:id="@+id/edit_filter"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="6"
            android:layout_margin="5dp"
            android:background="@drawable/edit_text_bg"
            android:singleLine="true"
            android:hint="Find by Name, Location Type or City"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="16sp"
             />

        <TextView
            android:id="@+id/btn_search"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/btn_blue"
            android:gravity="center"
            android:padding="5dp"
            android:text="Find Hospitals"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/list_patients"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_filter" />

</RelativeLayout>
