<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/txt_header_hospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="My Account - Radiology Preference"
        android:textColor="#9AB8D8"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_header_hospital"
        android:orientation="horizontal"
        android:padding="5dp" >

        <AutoCompleteTextView
            android:id="@+id/edit_name"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:layout_weight="6"
            android:background="@drawable/edit_text_bg"
            android:hint="Search For Radiology Tests"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_add_radi"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/edit_name"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_blue"
            android:text="Add"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />
    </LinearLayout>

    <ExpandableListView
        android:id="@+id/list_radiology"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_submit_radiology"
        android:layout_below="@+id/ll_filter"
        android:groupIndicator="@android:color/transparent" />

    <Button
        android:id="@+id/button_submit_radiology"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:background="@drawable/btn_blue"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

</RelativeLayout>