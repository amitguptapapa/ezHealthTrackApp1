<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="2dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_blue_round"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/img_patient"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/noimage" />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_patient"
            android:padding="3dp"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_display_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_name"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/btn_update"
            android:layout_toRightOf="@+id/img_patient"
            android:padding="3dp"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_address"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_below="@+id/txt_display_id"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/btn_update"
            android:layout_toRightOf="@+id/img_patient"
            android:maxWidth="300dp"
            android:minWidth="200dp"
            android:padding="3dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_address"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_patient"
            android:padding="3dp"
            android:text="Gender : "
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_gender_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_address"
            android:layout_toRightOf="@+id/txt_gender"
            android:padding="3dp"
            android:text="Male"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/img_email"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/txt_gender_1"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_patient"
            android:padding="3dp"
            android:src="@drawable/email" />

        <TextView
            android:id="@+id/txt_email"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/txt_gender_1"
            android:layout_toRightOf="@+id/img_email"
            android:padding="3dp"
            android:text="starabhi23@gmail.com"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/img_phn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/txt_email"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_patient"
            android:padding="3dp"
            android:src="@drawable/phn" />

        <TextView
            android:id="@+id/txt_phn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/txt_email"
            android:layout_toRightOf="@+id/img_phn"
            android:padding="3dp"
            android:text="8447588904"
            android:textSize="16sp" />

        <View
            android:id="@+id/view_center"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerInParent="true" />

        <Button
            android:id="@+id/btn_update"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:background="@drawable/btn_blue"
            android:text="Update"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_refer"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/btn_update"
            android:layout_margin="5dp"
            android:background="@drawable/btn_blue"
            android:text="Refer"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_schedule"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/btn_refer"
            android:layout_margin="5dp"
            android:background="@drawable/btn_blue"
            android:text="Schedule"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_checkin"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/btn_schedule"
            android:layout_margin="5dp"
            android:background="@drawable/btn_blue"
            android:text="Check-in"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_orders"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/btn_checkin"
            android:layout_margin="5dp"
            android:background="@drawable/btn_blue"
            android:text="Orders"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_new_order"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/btn_orders"
            android:layout_margin="5dp"
            android:background="@drawable/btn_blue"
            android:text="New Order"
            android:textColor="#ffffff"
            android:textSize="16sp" />
        
        <Button
            android:id="@+id/btn_medical_records"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/btn_new_order"
            android:layout_margin="5dp"
            android:background="@drawable/btn_blue"
            android:text="Medical Records"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>