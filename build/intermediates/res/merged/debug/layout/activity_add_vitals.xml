<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEF5FF" >
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:text="Abhishek Goyal"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:text="Fri, Jan 31, 2014"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/txt_date"
        android:layout_marginTop="10dp"
        android:background="#79B3FF" />
    
    <LinearLayout
        android:id="@+id/ll_vitals_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_1"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/rl_bp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/txt_bp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Blood Pressure"
                android:textSize="16sp"
                android:textColor="#000000"
                android:gravity="center" />
            
            <LinearLayout
                android:layout_below="@+id/txt_bp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/edit_bp_low"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="5"
                    android:textSize="16sp"
                    android:inputType="number"
                    android:textColor="#000000" />
                
                <TextView 
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="-"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="#000000"/>
                
                <EditText
                    android:id="@+id/edit_bp_high"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="5"
                    android:textSize="16sp"
                    android:inputType="number"
                    android:textColor="#000000" />
                
            </LinearLayout>
            
            
        </RelativeLayout>
        
         <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/txt_heart_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Heart Rate"
                android:textSize="16sp"
                android:textColor="#000000"
                android:gravity="center" />
            
            <EditText
                android:id="@+id/edit_heart_rate"
                android:layout_below="@+id/txt_heart_rate"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16sp"
                android:inputType="number"
                android:textColor="#000000" />
            
            </RelativeLayout>
            
         <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/txt_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Temperature"
                android:textSize="16sp"
                android:textColor="#000000"
                android:gravity="center" />
            
            <EditText
                android:id="@+id/edit_temp"
                android:layout_below="@+id/txt_temp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16sp"
                android:textColor="#000000" />
            
            </RelativeLayout>
            
         <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/txt_respiratory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Respiratory"
                android:textSize="16sp"
                android:textColor="#000000"
                android:gravity="center" />
            
            <EditText
                android:id="@+id/edit_repiratory"
                android:layout_below="@+id/txt_respiratory"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="number"
                android:textSize="16sp"
                android:textColor="#000000" />
            
            </RelativeLayout>
            
         <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/txt_pain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Pain"
                android:textSize="16sp"
                android:textColor="#000000"
                android:gravity="center" />
            
            <Spinner
                android:id="@+id/spinner_pain"
                android:layout_below="@+id/txt_pain"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16sp"
                android:textColor="#000000" />
            
            </RelativeLayout>
            
         
        
    </LinearLayout>
    
    <View
        android:id="@+id/view_2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/ll_vitals_1"
        android:layout_marginTop="10dp"
        android:background="#79B3FF" />
    
    <TextView
        android:id="@+id/txt_glucose_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="Glucose Test"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />
    
    <LinearLayout
        android:id="@+id/ll_glucose_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_glucose_test"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/rl_bp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/txt_fst_sugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Fst. Blood Sugar"
                android:textSize="16sp"
                android:textColor="#000000"
                android:gravity="center" />
                
                <EditText
                    android:id="@+id/edit_fst_sugar"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="16sp"
                    android:inputType="number"
                    android:layout_below="@+id/txt_fst_sugar"
                    android:textColor="#000000" />
            
            
        </RelativeLayout>
        
         <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/txt_post_prandial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Post Prandial"
                android:textSize="16sp"
                android:textColor="#000000"
                android:gravity="center" />
            
            <EditText
                android:id="@+id/edit_post_prandial"
                android:layout_below="@+id/txt_post_prandial"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16sp"
                android:inputType="number"
                android:textColor="#000000" />
            
            </RelativeLayout>
            
         <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/txt_random"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Random"
                android:textSize="16sp"
                android:textColor="#000000"
                android:gravity="center" />
            
            <EditText
                android:id="@+id/edit_random"
                android:layout_below="@+id/txt_random"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16sp"
                android:inputType="number"
                android:textColor="#000000" />
            
            </RelativeLayout>
            
         <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/txt_tolerance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Tolerance Test"
                android:textSize="16sp"
                android:textColor="#000000"
                android:gravity="center" />
            
            <EditText
                android:id="@+id/edit_tolerance"
                android:layout_below="@+id/txt_tolerance"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16sp"
                android:inputType="number"
                android:textColor="#000000" />
            
            </RelativeLayout>
            
         <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/txt_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Weight (KG)"
                android:textSize="16sp"
                android:textColor="#000000"
                android:gravity="center" />
            
            <EditText
                android:id="@+id/edit_weight"
                android:layout_below="@+id/txt_weight"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16sp"
                android:inputType="number"
                android:textColor="#000000" />
            
            </RelativeLayout>
   
    </LinearLayout>
    
    <View
        android:id="@+id/view_3"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/ll_glucose_test"
        android:layout_marginTop="10dp"
        android:background="#79B3FF" />
    
    <TextView
        android:id="@+id/txt_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_3"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="Additional Info"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />
    
    <EditText
        android:id="@+id/edit_note"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="10dp"
        android:layout_margin="18dp"
        android:layout_below="@+id/txt_info"
        android:gravity="start"
        android:background="#ffffff" />
    
    <Button
         android:id="@+id/btn_submit"
         android:layout_width="110dp"
         android:layout_height="45dp"
         android:layout_marginBottom="20dp"
         android:layout_below="@+id/edit_note"
         android:layout_centerHorizontal="true"
         android:layout_margin="15dp"
         android:background="@drawable/btn_blue"
         android:text="Submit"
         android:textColor="#ffffff"
         android:textSize="20sp" />
    
    </RelativeLayout>
    
    </ScrollView>

</RelativeLayout>