<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_test_name_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/txt_sample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_test_name"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="40dp"
        android:text="Sample : "
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_sample_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_test_name"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/txt_sample"
        android:text=""
        android:textColor="#000000"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/txt_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_test_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/txt_sample_display"
        android:text="Method : "
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_method_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_test_name"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/txt_method"
        android:text=""
        android:textColor="#000000"
        android:textSize="16dp" />

    <RelativeLayout
        android:id="@+id/rl_main_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_sample"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp" >

        <TextView
            android:id="@+id/txt_main_test_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txt_observed_value"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="280dp"
            android:textColor="#000000"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txt_unit_display"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_toRightOf="@+id/txt_observed_value"
            android:text=""
            android:textColor="#000000"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txt_reference_range_display"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="78dp"
            android:layout_toRightOf="@+id/txt_unit_display"
            android:text=""
            android:textColor="#000000"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txt_notes_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="82dp"
            android:layout_toRightOf="@+id/txt_reference_range_display"
            android:text=""
            android:textColor="#000000"
            android:textSize="16dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_result_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_main_display"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:text="Result Notes: "
        android:textColor="#000000"
        android:textSize="16dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_notes"
        android:layout_width="1100dp"
        android:layout_height="40dp"
        android:layout_below="@+id/rl_main_display"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/txt_result_notes"
        android:gravity="start"
        android:visibility="gone" />

</RelativeLayout>