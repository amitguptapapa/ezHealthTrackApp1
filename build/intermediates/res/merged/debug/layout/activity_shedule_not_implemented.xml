<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_window"
    android:padding="18dp"
    tools:context=".SheduleActivity" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        tools:ignore="UselessParent" >

        <TextView
            android:id="@+id/id_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="6dp"
            android:text="Improvement in Pogress"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_title"
            android:gravity="center"
            android:padding="12dp"
            android:text="We are improving Patient Scheduling functionality on Mobile devices, it&apos;s temporarily not available in the App. \n Please visit www.ezhealthtrack.com. "
            android:textAlignment="center"
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>