<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_blue_round" >

        <TextView
            android:id="@+id/txt_orders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/rl_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txt_orders"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:visibility="gone" >

            <Button
                android:id="@+id/btn_view_orders"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="@drawable/btn_blue"
                android:drawableLeft="@drawable/view_orders"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text=" View Order"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/btn_view_orders"
                android:background="@drawable/btn_blue"
                android:drawableLeft="@drawable/reject"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text=" Cancel"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_sampling"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/btn_cancel"
                android:background="@drawable/btn_blue"
                android:drawableLeft="@drawable/sampling"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text=" Sampling"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_send_message"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/btn_sampling"
                android:background="@drawable/btn_blue"
                android:drawableLeft="@drawable/send_message"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text=" Send Message"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_billings"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/btn_send_message"
                android:background="@drawable/btn_blue"
                android:drawableLeft="@drawable/billings"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text=" Billings"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_no_bill"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/btn_send_message"
                android:background="@drawable/btn_blue"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="No Bill"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>