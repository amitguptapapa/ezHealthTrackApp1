<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="12dp" >

    <include
        android:id="@+id/id_header"
        layout="@layout/ez_dialog_header" >
    </include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/id_footer"
        android:layout_below="@+id/id_header"
        android:scrollbars="none" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txt_available"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="#BE93C8"
                android:gravity="center"
                android:padding="10dp"
                android:text="Available"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_booked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_available"
                android:layout_centerHorizontal="true"
                android:background="#F8C65B"
                android:gravity="center"
                android:padding="10dp"
                android:text="Booked"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_tentative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_booked"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="#8CD061"
                android:gravity="center"
                android:padding="10dp"
                android:text="Tentative Appointment"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_vacation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_tentative"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="#F982AC"
                android:gravity="center"
                android:padding="10dp"
                android:text="Vacation"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_lunch_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_vacation"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="#D9EDF6"
                android:gravity="center"
                android:padding="10dp"
                android:text="Lunch"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </ScrollView>

    <include
        android:id="@+id/id_footer"
        layout="@layout/ez_dialog_footer" >
    </include>

</RelativeLayout>