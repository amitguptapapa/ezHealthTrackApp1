<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_blue_round"
        android:padding="20dp" >

        <TextView
            android:id="@+id/txt_header_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:text="Signature"
            android:textColor="#6692F2"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.ezhealthtrack.util.DrawingView
            android:id="@+id/dv_signature"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_below="@+id/txt_header_signature"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_blue_round"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/signature" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:layout_below="@+id/dv_signature"
            android:layout_centerHorizontal="true"
            android:layout_margin="15dp"
            android:background="@drawable/btn_blue"
            android:text="Save"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_clear"
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:layout_below="@+id/dv_signature"
            android:layout_margin="15dp"
            android:layout_toRightOf="@+id/btn_save"
            android:background="@drawable/btn_blue"
            android:text="Clear"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/txt_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:src="@drawable/close"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>