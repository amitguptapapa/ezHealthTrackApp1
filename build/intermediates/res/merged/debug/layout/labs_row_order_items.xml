<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp" >

        <TextView
            android:id="@+id/txt_test_name"
            android:layout_width="400dp"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_disabled_bg"
            android:padding="10dp"
            android:text="wwwwwwww"
            android:textColor="#000000"
            android:textSize="16dp" />

        <Spinner
            android:id="@+id/spinner_sample"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginLeft="78dp"
            android:layout_toRightOf="@+id/txt_test_name"
            android:background="@drawable/spinner_bg" />

        <EditText
            android:id="@+id/edit_price"
            style="@style/SingleLineEditText"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_marginLeft="52dp"
            android:layout_toRightOf="@+id/spinner_sample" />

        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/edit_price"
            android:src="@drawable/delete" />
    </RelativeLayout>

</RelativeLayout>