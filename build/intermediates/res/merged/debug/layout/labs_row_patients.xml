<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/bg_blue_round"
        >
        
        <ImageView
            android:id="@+id/img_patient"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/noimage" />
        
        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="3dp"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/img_patient"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/txt_address"
            android:layout_below="@+id/txt_name"
            android:layout_width="wrap_content"
            android:minWidth="200dp"
            android:maxWidth="300dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
           
            android:padding="3dp"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/img_patient"
            />
        
        <TextView
            android:id="@+id/txt_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="3dp"
            android:textSize="16sp"
            android:text="Gender : "
            android:layout_toRightOf="@+id/img_patient"
            android:layout_below="@+id/txt_address"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/txt_gender_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:textSize="16sp"
            android:text="Male"
            android:layout_toRightOf="@+id/txt_gender"
            android:layout_below="@+id/txt_address"
            />

        <ImageView
            android:id="@+id/img_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_patient"
            android:layout_below="@+id/txt_gender_1"
            android:padding="3dp"
            android:src="@drawable/email" />
        
        <TextView
            android:id="@+id/txt_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:textSize="16sp"
            android:text="starabhi23@gmail.com"
            android:layout_toRightOf="@+id/img_email"
            android:layout_below="@+id/txt_gender_1"
            />
        
        <ImageView
            android:id="@+id/img_phn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_patient"
            android:layout_below="@+id/txt_email"
            android:padding="3dp"
            android:src="@drawable/phn" />
        
        <TextView
            android:id="@+id/txt_phn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:textSize="16sp"
            android:text="8447588904"
            android:layout_toRightOf="@+id/img_phn"
            android:layout_below="@+id/txt_email"
            />

        <View
            android:id="@+id/view_center"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerInParent="true" />
        
        <Button
            android:id="@+id/btn_lab_work"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:textSize="16sp"
            android:background="@drawable/btn_blue" 
            android:layout_alignParentRight="true"
            android:text="Lab Work"
            android:textColor="#ffffff"/>
        
        <Button
            android:id="@+id/btn_schedule"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:textSize="16sp"
            android:background="@drawable/btn_blue" 
            android:layout_alignParentRight="true"
            android:layout_below="@+id/btn_refer"
            android:text="Schedule"
            android:textColor="#ffffff"/>
        
        
        
    </RelativeLayout>
    

</RelativeLayout>
