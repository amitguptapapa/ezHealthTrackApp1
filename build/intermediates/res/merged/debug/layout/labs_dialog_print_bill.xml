<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE" >

    <TextView
        android:id="@+id/txt_print_bill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="Print Bill Details"
        android:textColor="#9AB8D8"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/scroll_main"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_below="@+id/txt_print_bill" >

        <RelativeLayout
            android:id="@+id/rl_print"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <RelativeLayout
                android:id="@+id/rl_lab_info"
                style="@style/SingleLineEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/txt_lab_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textColor="#008080"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_lab_motto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_lab_name"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Lab Motto"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_lab_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_lab_motto"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/img_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_lab_address"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/phn" />

                <TextView
                    android:id="@+id/txt_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_lab_address"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/img_phone"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/img_lab"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/patient_image" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_patient_info"
                style="@style/SingleLineEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_lab_info"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/txt_patient_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Manoj kumar Mishra, 69/M"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txt_patient_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_patient_name"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="noida, Sunger Pur Delhi, Sunger Pur Delhi, Delhi, India - 110001"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/img_phone_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_patient_address"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/phn" />

                <TextView
                    android:id="@+id/txt_patient_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_patient_address"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/img_phone_1"
                    android:text="123456789098"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/img_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_patient_address"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/img_phone_1"
                    android:src="@drawable/email" />

                <TextView
                    android:id="@+id/txt_patient_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_patient_address"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/img_email"
                    android:text="77788"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txt_doctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_patient_phone"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Doctor"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_doctor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_doctor"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txt_bill_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="600dp"
                    android:layout_marginTop="10dp"
                    android:text="Bill Id :"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_bill_id_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/txt_bill_id"
                    android:text="1410-0910000069-00004"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_bill_id"
                    android:layout_marginLeft="600dp"
                    android:layout_marginTop="10dp"
                    android:text="Date :"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_date_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_bill_id"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/txt_date"
                    android:text="10/10/2014"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txt_order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_date"
                    android:layout_marginLeft="600dp"
                    android:layout_marginTop="10dp"
                    android:text="Order Id :"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_order_id_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_date"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/txt_order_id"
                    android:text="1410-0910000075-00004"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txt_order_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_order_id"
                    android:layout_marginLeft="600dp"
                    android:layout_marginTop="10dp"
                    android:text="Order Status :"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_order_status_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_order_id"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/txt_order_status"
                    android:text="Cancel"
                    android:textColor="#000000"
                    android:textSize="16dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_main_order"
                style="@style/SingleLineEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_patient_info"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="5dp" >

                <RelativeLayout
                    android:id="@+id/rl_order_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/txt_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Id"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_test_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="140dp"
                        android:layout_toRightOf="@+id/txt_id"
                        android:text="Test Name"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_qty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="316dp"
                        android:layout_toRightOf="@+id/txt_test_name"
                        android:text="Qty"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="183dp"
                        android:layout_toRightOf="@+id/txt_qty"
                        android:text="Price"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/view_line"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/txt_price"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="3dp"
                        android:background="#000000" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_order_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_order_details"
                    android:orientation="vertical" >
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_tax_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_order_details"
                    android:layout_marginLeft="576dp"
                    android:layout_marginTop="20dp"
                    android:text="Tax @ 10.00 %"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/img_rupee_order"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_below="@+id/ll_order_details"
                    android:layout_marginLeft="763dp"
                    android:layout_marginTop="23dp"
                    android:src="@drawable/rupee" />

                <TextView
                    android:id="@+id/txt_tax_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_order_details"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/img_rupee_order"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_tax_text"
                    android:layout_marginLeft="576dp"
                    android:layout_marginTop="20dp"
                    android:text="Total"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/img_rupee_tax"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_below="@+id/txt_tax_text"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="23dp"
                    android:layout_toRightOf="@+id/txt_total"
                    android:src="@drawable/rupee" />

                <TextView
                    android:id="@+id/txt_total_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_tax_text"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/img_rupee_tax"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_main"
                style="@style/SingleLineEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_main_order"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="5dp" >

                <RelativeLayout
                    android:id="@+id/rl_bill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/txt_date1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Date"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="153dp"
                        android:layout_toRightOf="@+id/txt_date1"
                        android:text="Type"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_note"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="150dp"
                        android:layout_toRightOf="@+id/txt_type"
                        android:text="Note"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="160dp"
                        android:layout_toRightOf="@+id/txt_note"
                        android:text="Amount"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="130dp"
                        android:layout_toRightOf="@+id/txt_amount"
                        android:text="Balance"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/view_line"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/txt_amount"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="3dp"
                        android:background="#000000" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_test_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_bill"
                    android:orientation="vertical" >
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_test_name"
                    android:layout_marginLeft="576dp"
                    android:layout_marginTop="20dp"
                    android:text="Discount @ 10.00 %"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_rupee_9"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_below="@+id/ll_test_name"
                    android:layout_marginLeft="763dp"
                    android:layout_marginTop="23dp"
                    android:src="@drawable/rupee"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_discount_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_test_name"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/img_rupee_9"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_tax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_discount"
                    android:layout_marginLeft="576dp"
                    android:layout_marginTop="20dp"
                    android:text="Tax @ 10.00 %"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_rupee_10"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_below="@+id/txt_discount"
                    android:layout_marginLeft="763dp"
                    android:layout_marginTop="23dp"
                    android:src="@drawable/rupee"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_tax_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_discount"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/img_rupee_10"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_tax"
                    android:layout_marginLeft="576dp"
                    android:layout_marginTop="20dp"
                    android:text="Total"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_rupee"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_below="@+id/txt_tax"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="23dp"
                    android:layout_toRightOf="@+id/txt_total"
                    android:src="@drawable/rupee"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_total_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_tax"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/img_rupee"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:visibility="gone" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_print"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_below="@+id/scroll_main"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:background="@drawable/btn_grey"
        android:padding="5dp"
        android:text="Print"
        android:textColor="#ffffff"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/txt_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:src="@drawable/close"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>