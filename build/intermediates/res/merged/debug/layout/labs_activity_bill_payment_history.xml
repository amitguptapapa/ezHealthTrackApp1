<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context=".OrderCreateActivity" >

    <TextView
        android:id="@+id/txt_bill_payment_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="@string/BillPaymentHistory"
        android:textColor="#9AB8D8"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/rl_patient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_bill_payment_history"
        android:layout_margin="20dp"
        android:background="@drawable/bg_blue_round"
        android:padding="5dp" >

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/Patient"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_name_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/txt_name"
            android:text=""
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/OrderDate"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_order_date_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/txt_order_date"
            android:text=""
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/txt_order_date"
            android:text="@string/Order"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_order_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/txt_order"
            android:text=""
            android:textColor="#82CAFA"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/OrderStatus"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_order_status_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/txt_order_status"
            android:text=""
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_bill_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_order_date"
            android:layout_marginLeft="465dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/txt_order_status"
            android:text="@string/BillStatus"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_bill_status_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_order_date"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/txt_bill_status"
            android:text=""
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_bill_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_order"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/txt_bill_status"
            android:text="@string/BillId"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_bill_id_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_order_date"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/txt_bill_id"
            android:text=""
            android:textColor="#000000"
            android:textSize="16sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_patient" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:id="@+id/rl_method"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/Date"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_payment_method"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/PaymentMethod"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_amount_paid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/AmountPaid"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_balance1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/AmountRefund"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_note"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/Note"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_payment_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_method"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >
            </LinearLayout>

            <View
                android:id="@+id/view_line"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/ll_payment_history"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="#000000" />

            <RelativeLayout
                android:id="@+id/rl_actual_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_line"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp" >

                <TextView
                    android:id="@+id/txt_original_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/TotalLabTestAmount"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_rupee_2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/txt_original_amount"
                    android:src="@drawable/rupee" />

                <TextView
                    android:id="@+id/txt_original_amount_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/img_rupee_2"
                    android:text="@string/Zero"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_original_amount"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_rupee_3"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_below="@+id/txt_original_amount"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@+id/txt_original_amount"
                    android:src="@drawable/rupee" />

                <TextView
                    android:id="@+id/txt_discount_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_original_amount"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/img_rupee_3"
                    android:text="@string/Zero"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_tax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_discount"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_rupee_4"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_below="@+id/txt_original_amount"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="42dp"
                    android:layout_toRightOf="@+id/txt_original_amount"
                    android:src="@drawable/rupee" />

                <TextView
                    android:id="@+id/txt_tax_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_original_amount"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="40dp"
                    android:layout_toRightOf="@+id/img_rupee_4"
                    android:text="@string/Zero"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_net_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_tax"
                    android:layout_marginTop="10dp"
                    android:text="@string/NetAmount"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_rupee_15"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_below="@+id/txt_tax"
                    android:layout_marginLeft="145dp"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@+id/txt_payable_amount"
                    android:src="@drawable/rupee" />

                <TextView
                    android:id="@+id/txt_net_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_tax"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/img_rupee_15"
                    android:text="@string/Zero"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_payable_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_net_amount"
                    android:layout_marginTop="10dp"
                    android:text="@string/PayableAmount"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_rupee_5"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_below="@+id/txt_net_amount"
                    android:layout_marginLeft="145dp"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@+id/txt_payable_amount"
                    android:src="@drawable/rupee" />

                <TextView
                    android:id="@+id/txt_payable_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_net_amount"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/img_rupee_5"
                    android:text="@string/Zero"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_total_paid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_payable_amount"
                    android:layout_marginTop="10dp"
                    android:text="@string/TotalPaid"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_rupee_6"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_below="@+id/txt_payable_amount"
                    android:layout_marginLeft="190dp"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@+id/txt_total_paid"
                    android:src="@drawable/rupee" />

                <TextView
                    android:id="@+id/txt_total_paid_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_payable_amount"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/img_rupee_6"
                    android:text="@string/Zero"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_refund"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_total_paid"
                    android:layout_marginTop="10dp"
                    android:text="@string/TotalRefund"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_rupee_8"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignLeft="@+id/img_rupee_3"
                    android:layout_below="@+id/txt_total_paid"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@+id/txt_refund"
                    android:src="@drawable/rupee"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_refund_display_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_total_paid"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/img_rupee_8"
                    android:text="@string/Zero"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_refund"
                    android:layout_marginTop="10dp"
                    android:text="@string/Balance"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_rupee_7"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_below="@+id/txt_refund"
                    android:layout_marginLeft="205dp"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@+id/txt_balance"
                    android:src="@drawable/rupee" />

                <TextView
                    android:id="@+id/txt_balance_display_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_refund"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/img_rupee_7"
                    android:text="@string/Zero"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </RelativeLayout>

            <Button
                android:id="@+id/btn_make_payment"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_below="@+id/rl_actual_amount"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/btn_grey"
                android:padding="5dp"
                android:text="@string/MakePayment"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_print_bill"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_below="@+id/rl_actual_amount"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/btn_grey"
                android:padding="5dp"
                android:text="@string/PrintBill"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_refund"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_below="@+id/rl_actual_amount"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/btn_grey"
                android:padding="5dp"
                android:text="@string/Refund"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:visibility="gone" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>