<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="@color/cyan" />

            <stroke android:width="1dp" android:color="@color/cyanLight" />

            <corners android:radius="2dp" />

            <padding android:bottom="4dp" android:left="6dp" android:right="6dp" android:top="4dp" />
        </shape></item>
    <item><shape>
            <solid android:color="@color/cyanLight" />

            <stroke android:width="1dp" android:color="@color/cyan" />

            <corners android:radius="2dp" />

            <padding android:bottom="4dp" android:left="6dp" android:right="6dp" android:top="4dp" />
        </shape></item>

</selector>


