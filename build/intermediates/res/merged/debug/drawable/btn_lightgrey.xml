<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="#dddddd" />

            <stroke android:width="1px" android:color="#aaaaaa" />

            <corners android:radius="2dp" />

            <padding android:left="6dp" android:right="6dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="#dddddd" android:startColor="#eeeeee" />

            <stroke android:width="1px" android:color="#cccccc" />

            <corners android:radius="2dp" />

            <padding android:left="6dp" android:right="6dp" />
        </shape></item>

</selector>